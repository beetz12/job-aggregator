{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile",
    "watchPatterns": [
      "src/**",
      "package.json",
      "package-lock.json",
      "motia.config.ts",
      "requirements.txt",
      "types.d.ts"
    ]
  },
  "deploy": {
    "startCommand": "npx motia start -p ${PORT:-4000}",
    "healthcheckPath": "/",
    "healthcheckTimeout": 120,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
